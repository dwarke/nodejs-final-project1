<%- include('header') %>

    <section class="page-heading wow fadeIn" data-wow-duration="1.5s"
        style="background-image: url(../../files/images/01-heading.jpg)">
        <div class="container">
            <div class="page-name">
                <h1>Our Blog</h1>
                <span>Lovely layout of heading</span>
            </div>
        </div>
    </section>

    <section class="on-blog-grid">
        <div class="container">
            <div class="row">
                <% postdata.map((val)=>{ %>
                    <div class="col-md-4">
                        <div class="blog-item">
                            <a href="blog-single.html" ><img src="/<%= val.images %>" style="width: 100%; height: 300px;" alt=""></a>
                            <h3><a href="blog-single.html"><%= val.titel %></a></h3>
                            <span><a href="#"><%= val.auther %></a> / <a href="#"><%= val.date %></a> / <a
                                    href="#"> <%= val.category %></a></span>
                            <p><%= val.discription.substring(0,150) %>...</p>
                            <div class="read-more">
                                <a href="/pages/blogsingle/<%= val.id %>">Read more</a>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                        <div class="col-md-12">
                            <div class="blog-page-nav text-center">
                                <ul>
                                    <li><a href="#" class="current">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
            </div>
        </div>
    </section>

    <%- include('footer') %>